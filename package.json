{
  "name": "rafflebox-prettier-config",
  "version": "1.0.1",
  "description": "Rafflebox prettier configuration file",
  "author": "Rafflebox Engineering",
  "license": "UNLICENSED",
  "homepage": "https://github.com/rafflebox-technologies-inc/rafflebox-prettier-config",
  "repository": {
    "type": "git",
    "url": "git://github.com/rafflebox-technologies-inc/rafflebox-prettier-config.git"
  },
  "scripts": {
    "format": "prettier --write \"**/*.{ts,js,json,md,yml}\"",
    "format:check": "prettier --debug-check \"**/*.{ts,js,json,md,yml}\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings 100",
      "git add"
    ],
    "*.{ts,js,json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "~4.3.8",
    "lint-staged": "^11.0.0",
    "prettier": "~2.3.0"
  }
}
